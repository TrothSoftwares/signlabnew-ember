<div class="ten wide column">
    <div class="ui segment black">
      <div class="enq-form" style=" max-height: 440px;overflow: auto; padding-right: 10px">
      <h2 class="ui header">Design Details</h2>
      {{#each project.items as |item index|}}
          <div class="ui segment black">
            <div class="ui top attached label"><h3 class="ui header">Item {{incrementone index}}</h3></div>
            <div class="ui form">

            <div class="field"><label>Design Specifications</label>
              {{input type="text" placeholder="Design Specifications" value=item.designspecifications}}
            </div>
            <div class="field"><label>Design Notes:</label>
              {{input type="text" placeholder="Design Design Notes" value=item.designnotes}}
            </div>
            <div class="field">
              <div style="min-height:35px">
            <h4 class=" ui  header " style="float:left">Upload Design Files</h4>
            <button class="mini primary   ui button" style="float:right"><i class="upload icon"></i>
              {{file-upload item=item designimages=item.designimages    on-upload=(action "uploadDesignimage")}}

            </button>
          </div>
            {{#if imageUploading }}
    <div class="loading-pane text-center">
      <div class="loading-message text-center " >
        <div style="padding-left:300px">
          <img src="/images/load.gif" style="margin-top:10px;padding-left:35px">
          <br>
          Uploading image
        </div>




      </div>
      </div>
    {{else}}
    {{/if}}
            <div class="ui divider"></div>

            <div class="ui three column grid">
              {{#each item.designimages as |designimage index|}}
              <div class="column"><div class="ui segment">
                {{#light-box href=designimage.fullurl data-lightbox="cats-group" data-title=designimage.description inlineImage=false}}
              <img src="{{designimage.thumburl}}">
              {{/light-box}}
              <a href="{{designimage.fullurl}}" target="_blank">
                <div class="ui mini blue labeled icon button">
                  Download<i class="download icon"></i>

                </div>
              </a>
                {{async-button designimage action="deleteDesignimage" default="Delete"  pending="Deleting.." class="ui button success block-shadow-success text-shadow mini button"}}
              </div></div>
              {{/each}}

            </div>



          </div>
          </div>
        </div>
        {{/each}}

              </div>
   </div>
</div>
<div class="four wide column">
  <button class="ui blue fluid  button" style="margin-bottom:10px" {{action "saveDesigndetails"}}>
    <i class="save icon"></i>Save
  </button>
</div>

{{outlet}}
